# Server Configuration
NODE_ENV=development
PORT=3000
API_PORT=3001
DOMAIN=localhost

# MongoDB
MONGODB_URI=mongodb://localhost:27017/simpleclaw

# Encryption (32-byte hex string for AES-256-GCM)
ENCRYPTION_KEY=your-64-character-hex-string-here-0123456789abcdef0123456789abcdef

# JWT
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# Docker
DOCKER_SOCKET=/var/run/docker.sock
AGENT_IMAGE=ghcr.io/openclaw/openclaw:latest
DATA_PATH=/opt/saas/data

# Port Range for Agents
MIN_AGENT_PORT=20000
MAX_AGENT_PORT=30000

# Stripe (Optional)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_HOBBY=price_...
STRIPE_PRICE_PRO=price_...

# Logging
LOG_LEVEL=info
